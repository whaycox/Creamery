@model WebAppViewModel<SatelliteStatusViewModel>
@{
    SatelliteStatusViewModel satelliteStatus = Model.Wrapped;
    string statusClass = null;
    switch(satelliteStatus.Status)
    {
        case SatelliteStatus.Good:
            statusClass = "good";
            break;
        case SatelliteStatus.Warning:
            statusClass = "warn";
            break;
        case SatelliteStatus.Failing:
            statusClass = "fail";
            break;
        case SatelliteStatus.Worried:
            statusClass = "worried";
            break;
        case SatelliteStatus.Unknown:
            statusClass = "unknown";
            break;
        default:
            throw new InvalidOperationException($"Unsupported status: {satelliteStatus.Status}");
    }
}
<gouda-status class="@statusClass">
    @satelliteStatus.Status
</gouda-status>