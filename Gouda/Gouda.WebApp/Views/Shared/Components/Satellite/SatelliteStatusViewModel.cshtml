@model WebAppViewModel
@{ 
    var status = Model.Unwrap<SatelliteStatusViewModel>();
    string statusClass = null;
    switch(status.Status)
    {
        case SatelliteStatus.Good:
            statusClass = "good";
            break;
        case SatelliteStatus.Warning:
            statusClass = "warn";
            break;
        case SatelliteStatus.Failing:
            statusClass = "fail";
            break;
        case SatelliteStatus.Worried:
            statusClass = "worried";
            break;
        case SatelliteStatus.Unknown:
            statusClass = "unknown";
            break;
        default:
            throw new InvalidOperationException($"Unsupported status: {status.Status}");
    }
}
<gouda-status class="@statusClass">
    @status.Status
</gouda-status>