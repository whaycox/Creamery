@using Cheddar.UI.Web.Glyphs.Implementation;

<div class="glyph-container">
    <i class="material-icons">@Glyph.Ligature</i>
</div>

@code {
    [Parameter]
    public MaterialIconGlyph Glyph { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        if (Glyph == null)
            throw new ArgumentNullException(nameof(Glyph));
    }
}
