@using Cheddar.UI.Web.Shared.Glyphs;

@switch (IGlyph)
{
    case MaterialIconGlyph materialIconGlyph:
        <MaterialIcon Glyph="materialIconGlyph" />
        break;
    default:
        throw new InvalidOperationException($"Unsupported {nameof(IGlyph.Provider)}: {IGlyph.Provider}");
}

@code {
    [Parameter]
    public IGlyph IGlyph { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        if (IGlyph == null)
            throw new ArgumentNullException(nameof(IGlyph));
    }
}
